<tr>
  <td>
    <%= image_tag image.image.tiny %>
  </td>
  <td>
    <h4><%= image.name %></h4>
    <br>
    <p><%= image.description %></p>
  </td>
  <td>$
    <%=  image.price_cents %>
  </td>
  <td>
    <%= button_to remove_item_cart_path(image_id: image.id), class: 'btn btn-xs btn-danger' do %> - <% end %>
    <%= quantity %>
    <%= button_to add_item_cart_path(image_id: image.id), class: 'btn btn-xs btn-success' do %> + <% end %>
  </td>
  <td>$
    <%= image.price_cents * quantity %>
  </td>
</tr>
