<article class="image">
  <header>
    <h4 class="name">
      <%= image.name %>
    </h4>
  </header>

  <p class="description">
    <%= image.description %>
  </p>

  <p class="image">
    <%= image_tag image.image.thumb, alt: image.name %>
  </p>

  <aside class="price">$
    <%=  image.price_cents %>
  </aside>

  <footer class="actions">
    <%= button_to add_item_cart_path(image_id: image.id), class: 'btn btn-primary' , method: :post do %>
      <%= fa_icon "shopping-cart", text: 'Add' %>
    <% end %>
  </footer>

</article>